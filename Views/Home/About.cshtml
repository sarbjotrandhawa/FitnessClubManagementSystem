@{
    ViewBag.Title = "About";
}
<h2>@ViewBag.Title.</h2>






<!doctype html>
<html>
<head>
    <style>
        /* Make the image fully responsive */
        .carousel-inner img {
            width: 100%;
            height: 80%;
        }
    </style>


    <link href="@Url.Content("~/Styles/bootstrap.min.css")" rel="stylesheet" type="text/css" />
    <script src="~/Scripts/jquery.min.js" type="text/javascript"></script>
    <script src="~/Scripts/bootstrap.min.js" type="text/javascript"></script>
    <script src="~/Scripts/popper.min.js" type="text/javascript"></script>


</head>
<body>
    <div class="well well-lg" style="color:#000080; text-align:center; font-size:30px; font-weight:bold;">The Fitness Health Club purpose is to give every Canadian the opportunity to live a fit and healthy good life. It makes high quality fitness affordable and provides more Canadians the opportunity to achieve their health and fitness goals</div>
    <!--Carousal-->
    <div class="container">

        <div id="myCarousel" class="carousel slide" data-ride="carousel">
            <!-- Indicators -->
            <ol class="carousel-indicators">
                <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
                <li data-target="#myCarousel" data-slide-to="1"></li>
                <li data-target="#myCarousel" data-slide-to="2"></li>
            </ol>

            <!-- Wrapper for slides -->
            <div class="carousel-inner">
                <div class="item active">
                    <img src="@Url.Content("~/Content/images/6.jpg")" alt="my pic" style="width:100%;">
                </div>

                <div class="item">
                    <img src="@Url.Content("~/Content/images/2.jpg")" style="width:100%;">
                </div>

                <div class="item">
                    <img src="@Url.Content("~/Content/images/3.jpg")" style="width:100%;">
                </div>
                <div class="item">
                    <img src="@Url.Content("~/Content/images/4.jpg")" style="width:100%;">
                </div>
            </div>

            <!-- Left and right controls -->
            <a class="left carousel-control" href="#myCarousel" data-slide="prev">
                <span class="glyphicon glyphicon-chevron-left"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="right carousel-control" href="#myCarousel" data-slide="next">
                <span class="glyphicon glyphicon-chevron-right"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
    </div>


</body>
</html>